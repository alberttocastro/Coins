    <div class="container">
        <div class="row">
            <div class="col s12 m6">
                <div class="card white darken-1 z-depth-5">
                    <div class="card-content blue-text text-lighten-1">
                        <%= image_tag("logo.svg", class: "login-logo") %>
                        <div class="row"></div>
                        <div class="container">
                            <div class="row">
                                <form class="col s12">
                                    <div class="row">
                                        <div class="input-field">
                                            <i class="material-icons blue-text text-darken-4 prefix">account_circle</i>
                                            <input id="icon_prefix" type="text" class="validate">
                                            <label for="icon_prefix">User</label>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="input-field">
                                            <i class="material-icons prefix blue-text text-darken-4">lock</i>
                                            <input id="icon_telephone" type="tel" class="validate">
                                            <label for="icon_telephone">Password</label>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="center-align">
                            <%= link_to "login", home_path, class: "waves-effect waves-light btn-large blue darken-1 col s12 z-depth-2" %>
                            <!-- <a class="waves-effect waves-light btn-large blue darken-1 col s12 z-depth-2">login</a> -->
                        </div>
                        <div class="row"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
            body {
                vertical-align: middle;
            }
            .card {
                 position: absolute;
                 left: 50%;
                 top: 50%;
                 -moz-transform: translate(-50%, -50%);
                 -webkit-transform: translate(-50%, -50%);
                 -ms-transform: translate(-50%, -50%);
                 -o-transform: translate(-50%, -50%);
                 transform: translate(-50%, -50%);
            }
            .login-logo{
                align-content: center;
            }
    </style>